{% extends 'Layouts/user.twig'%}
{% block content %}
<section class="s-content s-content--narrow s-content--no-padding-bottom">
    <article class="row format-standard">
        <div class="s-content__header col-full">
            <h1 class="s-content__header-title">
                {{title}}
            </h1>
            <ul class="s-content__header-meta">
                <li class="date">{{creationDate}}</li>
                <li class="cat">
                    In
                    {% for tag in tags %}
                    <a href="category.html">{{tag}}</a>
                    {% endfor %}
                </span>
                </li>
            </ul>
        </div>
        <div class="col-full s-content__main">
            {{body}}
            </p>

            <div class="s-content__author">
                <div class="s-content__author-about">
                    <h4 class="s-content__author-name">
                        <a href="#0">Jonathan Doe</a>
                    </h4>
                </div>
            </div>
        </div>
    </article>

    <div class="comments-wrap">
        <div id="comments" class="row">
            <div class="col-full">
                {% if nofComments > 1 %}
                <h3 class="h2">{{nofComments}} Comments</h3>
                {% elseif nofComments == 1 %}
                <h3 class="h2">{{nofComments}} Comment</h3>
                {% else %}
                <h3 class="h2">No comments</h3>
                {% endif %}
                <ol class="commentlist">

                    {% for comment in comments %}
                    <li class="depth-1 comment">
                        <div class="comment__content">
                            <div class="comment__info">
                                <cite>{{comment.author}}</cite>
                                <div class="comment__meta">
                                    <time class="comment__time">{{comment.creationDate}}</time>
                                </div>
                            </div>
                            <div class="comment__text">
                            <p>{{comment.body}}</p>
                            </div>

                        </div>
                    </li>

                    {% endfor %}
                </ol>
                <div class="respond">

                    <h3 class="h2">Add Comment</h3>
                    <form name="contactForm" id="contactForm" method="post" action="">
                        <fieldset>
                            <div class="message form-field">
                                <textarea name="cMessage" id="cMessage" class="full-width" placeholder="Your Message"></textarea>
                            </div>
                            <button type="submit" class="submit btn--primary btn--large full-width">Submit</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock content %}
